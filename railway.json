{
  "services": [
    {
      "name": "med-guardian-app",
      "startCommand": "bash ./start-prod.sh",
      "dockerfilePath": "/Dockerfile",
      "env": {
        "RAILWAY_SERVICE_ID": "<YOUR_RAILWAY_SERVICE_ID>",
        "RAILWAY_TOKEN": "<YOUR_RAILWAY_TOKEN>",
        "MONGO_URI": "<YOUR_MONGO_URI>",
        "REDIS_URL": "<YOUR_REDIS_URL>",
        "SENTRY_DSN": "<YOUR_SENTRY_DSN>"
      },
      "healthcheckPath": "/api/health",
      "resources": {
        "cpu": 2,
        "memory": 1024
      },
      "regions": ["us-west1"],
      "replicas": 1,
      "restartPolicy": {
        "type": "on-failure",
        "maxRetries": 10
      },
      "watchPaths": [
        "/src/**",
        "/Dockerfile",
        "/start-prod.sh"
      ],
      "serverless": false,
      "deploy": {
        "branch": "main",
        "waitForCI": true
      },
      "build": {
        "builder": "dockerfile",
        "metal": false
      },
      "description": "Med-Guardian real-time disease monitoring and forecasting application"
    }
  ]
}
